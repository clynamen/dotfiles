#!/bin/bash
#this file is called by .xinitrc to start some nice apps for dwm

feh --bg-scale '/home/clynamen/images/wallpaper/fractal.png' &

while true; do
  xsetroot -name "$(date +"%A %d/%m/%y %H:%M:%S")  $(df -h | grep rootfs | awk '{print " /: " $3"/"$2 " avail: " $4}')  $(amixer -c 1 get Master | grep "Mono:" | awk '{print "Master: " $4 " " $6 }') "
  sleep 1
done &

while true; do
  dwm || exit
done

